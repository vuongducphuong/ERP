<odoo>
    <template id="account_ex_phieu_thu_chi_chi">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="row">
                    <div class="col-xs-7 text-left truong-gia-tri-kieu-text-dat-tren-header" style="line-height: 0.5cm;">
                        <span t-esc="o.get_ten_cong_ty()" />
                        <br />
                        <span t-esc="o.get_dia_chi_cong_ty()" />
                    </div>
                    <div class="col-xs-5 text-center">
                        <div class="mau-so">
                            <span>
                                <strong>Mẫu số 02 - TT</strong>
                            </span>
                            <br />
                        </div>
                        <div class="ban-hanh-theo-quyet-dinh-so" t-if="o.lay_che_do_ke_toan() == '0'" style="line-height: 0.5cm;">
                            <span>(Ban hành theo thông tư số 200/2014/TT-BTC)</span>
                            <br />
                            <span>Ngày 22/12/2014 của Bộ Tài chính)</span>
                        </div>
                        <div class="ban-hanh-theo-quyet-dinh-so" t-if="o.lay_che_do_ke_toan() == '15'" style="line-height: 0.5cm;">
                            <span>(Ban hành theo Thông tư số 133/2016/TT-BTC)</span>
                            <br />
                            <span>Ngày 26/08/2016 của Bộ Tài chính)</span>
                        </div>
                    </div>
                </div>
                <div class="row" style="line-height: 0.6cm;margin-top: 3px;">
                    <div class="col-xs-4 "></div>
                    <div class="col-xs-4 text-center " style="margin-left: -25px;">
                        <span>
                            <strong>PHIẾU CHI</strong>
                        </span>
                        <br />
                        <strong class="text-nam-ngay-duoi-tieu-de-bao-cao-voi-font-nghieng-dam">
                            <span t-if="o.NGAY_CHUNG_TU" t-field="o.NGAY_CHUNG_TU" t-options="{'widget': 'ngaythang'}" />
                        </strong>
                    </div>
                    <div class="col-xs-4 text-left text-nam-ngay-duoi-tieu-de-bao-cao ">
                        <span>Quyển số:</span>
                        <span>..................................</span>
                        <br />
                        <span>Số: </span>
                        <span t-if="o.SO_CHUNG_TU" t-field="o.SO_CHUNG_TU" />
                        <t t-if="not o.SO_CHUNG_TU" t-call="danh_muc.empty_line" />
                        <br />
                        <span>Nợ: </span>
                        <span t-field="o.ACCOUNT_EX_PHIEU_THU_CHI_TIET_IDS" t-options="{'widget': 'ghino'}" />
                        <br />
                        <span>Có: </span>
                        <span t-field="o.ACCOUNT_EX_PHIEU_THU_CHI_TIET_IDS" t-options="{'widget': 'ghico'}" />
                    </div>
                </div>
                <div class="row" style="line-height: 0.65cm;">
                    <div class="col-xs-12">
                        <span>Họ tên người nhận tiền:</span>
                        <span t-if="o.NOP_TIEN_MAU_IN" t-field="o.NOP_TIEN_MAU_IN" />
                        <t t-if="not o.NOP_TIEN_MAU_IN" t-call="danh_muc.empty_line" />
                    </div>
                    <div class="col-xs-12">
                        <span>Địa chỉ:</span>
                        <span t-if="o.DIA_CHI" t-field="o.DIA_CHI" />
                        <t t-if="not o.DIA_CHI" t-call="danh_muc.empty_line" />
                    </div>
                    <div class="col-xs-12">
                        <span>Lý do chi:</span>
                        <span t-if="o.DIEN_GIAI_PC" t-field="o.DIEN_GIAI_PC" />
                        <t t-if="not o.DIEN_GIAI_PC" t-call="danh_muc.empty_line" />
                    </div>
                    <div class="col-xs-12">
                        <span>Số tiền:  </span>
                        <strong>
                            <span t-if="o.SO_TIEN_1" t-field="o.SO_TIEN_1" style="margin-left:10px" />
                            <span t-if="o.currency_id" t-field="o.currency_id.MA_LOAI_TIEN" />
                        </strong>
                        <t t-if="not o.SO_TIEN_1" t-esc="'......................................................................................................................'" />
                    </div>
                    <div class="col-xs-12">
                        <span>Viết bằng chữ:</span>
                        <strong>
                            <t t-if="o.SO_TIEN_1 !=0">
                                <i>
                                    <span t-if="o.SO_TIEN_1" t-field="o.currency_id.KY_HIEU_BAT_DAU" style="margin-left:10px" />
                                    <span t-if="o.SO_TIEN_1" t-field="o.SO_TIEN_1" t-options="{'widget': 'vietbangchu'}" />
                                    <span t-if="o.SO_TIEN_1" t-field="o.currency_id.KY_HIEU_KET_THUC" />
                                </i>
                            </t>
                        </strong>
                        <t t-if="not o.SO_TIEN_1" t-esc="'.....................................................................................................................................................................'" />
                    </div>
                    <div class="col-xs-12">
                        <span>Kèm theo:</span>
                        <span t-if="o.KEM_THEO_CHUNG_TU_GOC" t-field="o.KEM_THEO_CHUNG_TU_GOC" />
                        <t t-if="not o.KEM_THEO_CHUNG_TU_GOC" t-call="danh_muc.empty_line" />
                        <span>chứng từ gốc</span>
                        <br />
                        
                    </div>
                    
                    <div class="col-xs-7"></div>
                    <div class="col-xs-5 text-center">
                        <span>
                                Ngày ......tháng ......năm .........
                            </span>
                    </div>
                    
                    
                </div>
                <!-- Table -->
                <table style="width: 96%;">
                    <thead>
                        <tr>
                            <th class="text-center nguoi-ky" style="vertical-align: middle;width: 20%;">
                                <strong>Giám đốc</strong>
                            </th>
                            <th class="text-center nguoi-ky" style="vertical-align: middle;width: 20%;">
                                <strong>Kế toán trưởng</strong>
                            </th>
                            <th class="text-center nguoi-ky" style="vertical-align: middle;width: 20%;">
                                <strong>Thủ quỹ</strong>
                            </th>
                            <th class="text-center nguoi-ky" style="vertical-align: middle;width: 20%;">
                                <strong>Người lập phiếu</strong>
                            </th>
                            <th class="text-center nguoi-ky" style="vertical-align: middle;">
                                <strong>Người nhận tiền</strong>
                            </th>
                        </tr>
                        <tr>
                            <td class="text-center" style="font-style: italic;">
                                <i>(Ký, họ tên, đóng dấu)</i>
                            </td>
                            <td class="text-center" style="font-style: italic;">
                                <i>(Ký, họ tên)</i>
                            </td>
                            <td class="text-center" style="font-style: italic;">
                                <i>(Ký, họ tên)</i>
                            </td>
                            <td class="text-center" style="font-style: italic;">
                                <i>(Ký, họ tên)</i>
                            </td>
                            <td class="text-center" style="font-style: italic;">
                                <i>(Ký, họ tên)</i>
                            </td>
                        </tr>
                    </thead>
                </table>
                <table class="nguoi-ky" style="width: 96%;margin-top: 95px;line-height:normal">
                    <thead>
                        <tr>
                            <th class="text-center" style="vertical-align: top;width: 20%;">
                                <strong>
                                    <span t-esc="o.get_giam_doc()" />
                                </strong>
                            </th>
                            <th class="text-center" style="vertical-align: top;width: 20%;">
                                <strong>
                                    <span t-esc="o.get_ke_toan_truong()" />
                                </strong>
                            </th>
                            <th class="text-center" style="vertical-align: top;width: 20%;">
                                <strong>
                                    <span t-esc="o.get_thu_quy()" />
                                </strong>
                            </th>
                            <th class="text-center" style="vertical-align: top;width: 20%;">
                                <strong>
                                    <span t-esc="o.get_nguoi_lap_phieu()" />
                                </strong>
                            </th>
                            <th class="text-center" style="vertical-align: top;">
                                <strong>
                                    <span t-if="o.NGUOI_NOP" t-field="o.NGUOI_NOP" />
                                </strong>
                            </th>
                        </tr>
                    </thead>
                </table>
                <div class="row">
                    <div class="col-xs-12" style="margin-left:-15px">
                        <div class="col-xs-4">
                            <span>Đã nhận đủ số tiền(Viết bằng chữ)</span>
                        </div>
                        <div class="col-xs-8">
                            <t t-if="o.TY_GIA !=1">
                                <span t-if="o.SO_TIEN_1" t-field="o.SO_TIEN_1" t-options="{'widget': 'vietbangchu'}" style="margin-left:-15px" />
                                <t t-if="not o.SO_TIEN_1" t-call="danh_muc.empty_line" />
                            </t>
                            <t t-if="o.TY_GIA ==1">
                                <span t-if="o.SO_TIEN_1" t-field="o.currency_id.KY_HIEU_BAT_DAU" style="margin-left:-15px" />
                                <span t-if="o.SO_TIEN_1" t-field="o.SO_TIEN_1" t-options="{'widget': 'vietbangchu'}" />
                                <t t-if="not o.SO_TIEN_1" t-call="danh_muc.empty_line" />
                                <span t-if="o.SO_TIEN_1" t-field="o.currency_id.KY_HIEU_KET_THUC" />
                            </t>
                        </div>
                    </div>
                    
                    <t t-if="o.TY_GIA !=1">
                        <div class="col-xs-12" style="margin-top:10px">
                            <span>+ Tỷ giá ngoại tệ(vàng,bạc,đá quý):</span>
                            <span t-if="o.TY_GIA" t-field="o.TY_GIA" style="margin-left:10px" />
                            <t t-if="not o.TY_GIA" t-call="danh_muc.empty_line" />
                        </div>
                        <div class="col-xs-12" style="line-height:normal">
                            <span>+ Số tiền quy đổi:</span>
                            <span t-if="o.SO_TIEN_TREE" t-field="o.SO_TIEN_TREE" style="margin-left:10px" />
                            <t t-if="not o.SO_TIEN_TREE" t-call="danh_muc.empty_line" />
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
    <template id="template_account_ex_phieu_thu_chi_chi">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="account_ex.account_ex_phieu_thu_chi_chi" />
            </t>
        </t>
    </template>
    <data>
        <report string="02-TT: Phiếu chi" id="action_template_account_ex_phieu_thu_chi_chi" model="account.ex.phieu.thu.chi" report_type="qweb-html" name="account_ex.template_account_ex_phieu_thu_chi_chi" file="account_ex.template_account_ex_phieu_thu_chi_chi" print_report_name="phiếu chi" />
    </data>
</odoo>